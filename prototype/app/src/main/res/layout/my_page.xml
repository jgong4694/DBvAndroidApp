<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageActivity">

    <LinearLayout
        android:id="@+id/higherText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/teal_700"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/BackMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:gravity="center"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="267dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="   MyPage"
                android:textSize="28sp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/alamButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:drawableBottom="@drawable/alam"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/man"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="48dp"
                    android:text="회원 아이디"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tobni"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <Button
                    android:id="@+id/coupon_button"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/black"
                    android:text="쿠폰함"
                    android:textColor="@color/white"
                    android:textSize="12sp"></Button>

                <Button
                    android:id="@+id/gesi_button"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:text="게시물"
                    android:textColor="@color/black"
                    android:textSize="12sp"></Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coupon_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/couponCode1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:text="평택 나라 상품권 10000권"
                    android:textColor="@color/black"
                    android:textSize="24sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_margin="3dp"
                    android:layout_marginLeft="10dp"
                    android:text="10일 남음"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/couponCode2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:text="지역 카페 음료 2잔 무료"
                    android:textColor="@color/black"
                    android:textSize="24sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="10일 남음"
                    android:textSize="12sp"></TextView>
            </LinearLayout>
                <ImageButton
                    android:id="@+id/code1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="@drawable/coard1"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">
                </ImageButton>
                <ImageButton
                    android:id="@+id/code2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/coard2"
                    android:visibility="gone">
                </ImageButton>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/gesi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="20sp"
                        android:background="@drawable/jeosugi"></ImageButton>

                    <ImageButton
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:background="@drawable/jeosugi"></ImageButton>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="20sp"
                        android:background="@drawable/jeosugi"></ImageButton>

                    <ImageButton
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:background="@drawable/jeosugi"></ImageButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/bottomicon"
android:layout_gravity="bottom"
android:layout_height="wrap_content"
android:layout_width="match_parent"
app:itemIconTint="@drawable/selector_menu_blue"
app:itemTextColor="@drawable/selector_menu_blue"
app:labelVisibilityMode="labeled"
app:menu="@menu/menu_bottomnavi">

</com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>